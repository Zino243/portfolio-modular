---
import datas from '../../data/information.json';

export async function getStaticPaths() {
  return datas.proyectos.map((p) => ({
    params: { id: p.id },
  }));
}

const { id } = Astro.params;
const proyecto = datas.proyectos.find((p) => p.id === id);

if (!proyecto) {
  throw new Error(`Proyecto ${id} no encontrado`);
}
---

<article class="prose mx-auto">
  <h1 class="text-4xl font-bold">{proyecto.titulo}</h1>
  <img src={proyecto.imagen1} alt={proyecto.titulo} class="my-4 rounded-lg shadow" />
  <p>{proyecto.texto1}</p>
</article>
